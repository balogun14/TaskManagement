@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

      <div class="col-md-3 text-end">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-controller="auth" asp-action="Edit"  title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline"  asp-controller="auth" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
       <a  class="btn btn-outline-primary me-2" asp-controller="auth" asp-action="Login">Login</a>
        <a  class="btn btn-primary mx-2"  asp-controller="auth" asp-action="Register">Sign-up</a>

}
      </div>
